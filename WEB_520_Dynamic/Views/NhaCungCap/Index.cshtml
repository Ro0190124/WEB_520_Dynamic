@model IEnumerable<NHA_CUNG_CAP>

<div class="container">
	<partial name="_Notification" />
	<div class="Them_ND">
		<div>
			<a asp-controller="NhaCungCap" asp-action="ThemNhaCungCap"><button class="Them-TK">Thêm nhà cung cấp</button></a>
		</div>
		<div class="ND_TimKiem">
			<input type="text" placeholder="Tìm kiếm nhà cung cấp..." name="searchString">
		</div>
	</div>
	<div class="Tb-Container">
		<table class="table_user responsive-table">
			<thead>
				<tr>
					<th> STT</th>
					<th> Tên nhà cung cấp</th>
					<th> Địa chỉ</th>
					<th> Số điện thoại</th>
					<th> Mã số thuế</th>
					<th> Số tài khoản</th>
					<th> Người đại diện</th>
					<th> Trạng thái</th>
					<th> Chỉnh sửa</th>
				</tr>
			</thead>
			<tbody>
				@{
					int j = 0;
				}
				@foreach (var i in Model)
				{
					j = j + 1;
					string trangThai = "Còn";
					@if(i.TrangThai == false)
					{
						trangThai = "Ngừng";
					}
					<tr>
						<td>@j</td>
						<td>@i.TenNhaCungCap</td>
						<td>@i.DiaChi</td>
						<td>@i.SoDienThoai</td>
						<td>@i.MaSoThue</td>
						<td>@i.SoTaiKhoan</td>
						<td>@i.NguoiDaiDien</td>
						<td>@trangThai</td>
						<td class="ND_Table_Icon">


							<a class="btn-primary" asp-controller="NhaCungCap" asp-action="SuaNhaCungCap" asp-route-id="@i.MaNhaCungCap">

								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
									<path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
								</svg>
							</a>

							<a class="btn-primary" asp-controller="NhaCungCap" asp-action="XoaNhaCungCap" asp-route-id="@i.MaNhaCungCap">

								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
									<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
									<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
								</svg>
							</a>
						</td>
					</tr>

				}
			</tbody>
		</table>
	</div>
</div>
